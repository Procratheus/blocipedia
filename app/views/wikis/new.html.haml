.ui.page.grid
  .ui.column.middle.aligned.relaxed.fitted.stackable.grid
    .center.aligned
      %h2 
        Create your new wiki.
    .ui.form.segment
      = form_for @wiki do |f|
        .field
          = f.label :title
          = f.text_field :title
        .field
          = f.label :description
          = f.text_field :description
        .field
          = f.label :body
          = f.text_area :body
        - if current_user.role == "premium" || current_user.role == "admin"
          .field
            .ui.checkbox
              = f.check_box :private
              = f.label :private
        .field
          = f.submit "Create", class: "ui button blue submit"


