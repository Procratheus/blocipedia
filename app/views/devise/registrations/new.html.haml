%div
  .ui.two.column.middle.aligned.relaxed.fitted.stackable.grid
    .column
      .center.aligned
        %h2 Sign up with E-mail
      .ui.form.segment
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.label :email
            .ui.left.icon.input
              = f.email_field :email, autofocus: true
              %i.user.icon
          .field
            = f.label :password
            - if @validatable
              %em
                (#{@minimum_password_length} characters minimum)
            .ui.left.icon.input
              = f.password_field :password, autocomplete: "off"
              %i.lock.icon
          .field
            = f.label :password_confirmation
            .ui.left.icon.input
              = f.password_field :password_confirmation, autocomplete: "off"
              %i.lock.icon
          %div
            = f.submit "Sign up", class: " ui left icon button blue submit"
          .field
            %br/
            = render "devise/shared/links"         
    .ui.vertical.divider
      OR
    .center.aligned.column
      %h2 Sign up with social media
      .ui.form.segment
        .ui.huge.facebook.button
          = link_to " ", user_omniauth_authorize_path(:facebook)
          %i.facebook.icon
          facebook
        .ui.huge.twitter.button
          = link_to " ", user_omniauth_authorize_path(:twitter)
          %i.twitter.icon
          twitter


          
